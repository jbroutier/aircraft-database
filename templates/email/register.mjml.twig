{% extends 'email.mjml.twig' %}

{% block content %}
  <mj-section>
    <mj-column>
      <mj-text color="#343a40" font-family="Inter, sans-serif" font-size="15px" line-height="20px">
        {{ 'Hello %firstName%,'|trans({ '%firstName%': user.firstName }) }}
      </mj-text>
      <mj-text color="#343a40" font-family="Inter, sans-serif" font-size="15px" line-height="20px">
        {{ 'To complete the creation of your account, please confirm your email address by clicking on the button below:'|trans }}
      </mj-text>
      <mj-spacer height="10px" />
      <mj-button background-color="#1565c0" border-radius="8px" color="#fff" font-family="Inter, sans-serif"
                 font-size="15px" padding="20px 25px"
                 href="{{ absolute_url(path('registration_confirm_email', { token: token.token })) }}">
        {{ 'Confirm my email address'|trans }}
      </mj-button>
      <mj-spacer height="10px" />
      <mj-text color="#343a40" font-family="Inter, sans-serif" font-size="15px" line-height="20px">
        {{ 'If the button is not displayed or not clickable, you can also copy and paste the link below into your browser:'|trans }}
      </mj-text>
      <mj-text color="#343a40" font-family="Inter, sans-serif" font-size="15px" line-height="20px">
        {{ absolute_url(path('registration_confirm_email', { token: token.token })) }}
      </mj-text>
      <mj-text color="#343a40" font-family="Inter, sans-serif" font-size="15px" line-height="20px">
        {{ 'This link will expire on %expiresAt%.'|trans({ '%expiresAt%': token.expiresAt|format_datetime }) }}
      </mj-text>
    </mj-column>
  </mj-section>
{% endblock %}
