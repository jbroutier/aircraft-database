<div class="alert-container">

  {% for type, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-dismissible alert-{{ type }}" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'Close'|trans }}"></button>

        {% if type == 'danger' %}
          <span class="bi-exclamation-circle me-1" aria-hidden="true"></span>
        {% elseif type == 'info' %}
          <span class="bi-info-circle me-1" aria-hidden="true"></span>
        {% elseif type == 'success' %}
          <span class="bi-check-circle me-1" aria-hidden="true"></span>
        {% elseif type == 'warning' %}
          <span class="bi-exclamation-circle me-1" aria-hidden="true"></span>
        {% endif %}

        {{ message }}
      </div>
    {% endfor %}
  {% endfor %}

</div>
