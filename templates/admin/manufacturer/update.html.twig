<div class="modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-scrollable modal-fullscreen-xl-down modal-xl">

    {{ form_start(form, { attr: { class: 'modal-content', 'data-controller': 'slug' } }) }}

    <div class="modal-header">
      <h5 class="modal-title">{{ manufacturer.name }}</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
    </div>
    <div class="modal-body">

      {% include '_partials/admin/manufacturer.html.twig' %}

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        {{ 'Cancel'|trans }}
      </button>
      <button type="button" class="btn btn-primary" data-action="click->modal#submit"
              data-modal-url-param="{{ path('admin_manufacturer_update', { id: manufacturer.id }) }}">
        {{ 'Save'|trans }}
      </button>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

  </div>
</div>
