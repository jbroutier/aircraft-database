<div class="modal" tabindex="-1">
  <div class="modal-dialog">

    {{ form_start(form, { attr: { class: 'modal-content' } }) }}

    <div class="modal-header">
      <h5 class="modal-title">{{ 'Delete the tag'|trans }}</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
    </div>
    <div class="modal-body">

      {{ 'Are you sure you want to delete the tag «%name%»?'|trans({ '%name%': tag.name }) }}

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        {{ 'Cancel'|trans }}
      </button>
      <button type="button" class="btn btn-danger" data-action="click->modal#submit"
              data-modal-url-param="{{ path('admin_tag_delete', { id: tag.id }) }}">
        {{ 'Delete'|trans }}
      </button>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

  </div>
</div>
