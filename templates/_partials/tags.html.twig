<div class="position-absolute w-100 top-0 p-2 tags">
  <div class="d-flex flex-column align-items-end gap-1">

    {% for tag in tags %}
      <div class="badge" style="background: {{ tag.color }};">
        <span class="fal fa-{{ tag.icon }} me-1" aria-hidden="true"></span>

        {% if tag.description is not null %}
          <dfn>
            <abbr data-bs-toggle="tooltip" data-bs-html="true"
                  title="{{ tag.description|raw|nl2br|escape('html_attr') }}">
              {{ tag.name }}
            </abbr>
          </dfn>
        {% else %}
          {{ tag.name }}
        {% endif %}

      </div>
    {% endfor %}

  </div>
</div>
