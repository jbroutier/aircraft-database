{% extends 'layouts/home.html.twig' %}

{% block content %}
  <div class="d-flex flex-column align-items-center gap-3">
    <img src="{{ asset('assets/images/logo.svg') }}" width="300" height="300" alt="">
    <div class="text-center">
      <h1 class="display-1">Aircraft database</h1>
      <p class="display-6 text-muted">
        {{ site.description|trans }}
      </p>
    </div>
  </div>
  <div class="d-flex flex-wrap flex-lg-nowrap justify-content-center align-items-center gap-3 mt-3">
    <a class="btn btn-primary" href="{{ path('database_manufacturer_list') }}">
      {{ 'Manufacturers'|trans }}
    </a>
    <a class="btn btn-primary" href="{{ path('database_aircraft_type_list') }}">
      {{ 'Aircraft types'|trans }}
    </a>
    <a class="btn btn-primary" href="{{ path('database_engine_model_list') }}">
      {{ 'Engine models'|trans }}
    </a>
  </div>
{% endblock %}
