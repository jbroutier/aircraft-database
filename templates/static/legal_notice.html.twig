{% extends '_layouts/default.html.twig' %}

{% block title %}{{ 'Legal notice'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
  <div class="card card-body mx-auto max-w-700px">
    <h1 class="display-6 mb-3 text-center">{{ 'Legal notice'|trans }}</h1>
    <h3>{{ 'Hosting provider'|trans }}</h3>
    <p class="card-text">
      {{ 'This website is hosted by:'|trans }}
    </p>
    <address>
      <strong>OVH SAS</strong><br>
      2 rue Kellermann<br>
      59100 Roubaix<br>
      France
    </address>
    <p class="card-text">
      <span class="fal fa-phone me-2" aria-hidden="true"></span>
      {{ 'Telephone: %link%'|trans({
        '%link%': '<a href="tel:+330972101007">+33 (0)9 72 10 10 07</a>'
      })|raw }}
      <br>
      <span class="fal fa-message me-2" aria-hidden="true"></span>
      {{ 'Contact: %link%'|trans({
        '%link%': '<a href="https://www.ovhcloud.com/en/contact/">' ~ 'Contact form'|trans ~ '</a>'
      })|raw }}
    </p>
    <h3>{{ 'Personal data'|trans }}</h3>
    <p class="card-text">
      {{ 'Please see our %link%.'|trans({
        '%link%': '<a href="' ~ path('static_privacy_policy') ~ '">' ~ 'Privacy policy'|trans ~ '<a>'
      })|raw }}
    </p>
    <h3>{{ 'Cookies'|trans }}</h3>
    <p class="card-text">
      {{ 'Please see our %link%.'|trans({
        '%link%': '<a href="' ~ path('static_cookie_policy') ~ '">' ~ 'Cookie policy'|trans ~ '<a>'
      })|raw }}
    </p>
    <h3>{{ 'Licenses'|trans }}</h3>
    <p class="card-text">
      {{ 'Data is published under the terms of the %link% license.'|trans({
        '%link%': '<a rel="noopener noreferrer" href="https://spdx.org/licenses/CC-BY-SA-4.0.html">Creative Commons BY-SA-4.0</a>'
      })|raw }}
    </p>
    <p class="card-text">
      {{ 'Website %link1% is published under the terms of the %link2% license.'|trans({
        '%link1%': '<a href="https://github.com/jbroutier/aircraft-database">' ~ 'source code'|trans ~ '</a>',
        '%link2%': '<a rel="noopener noreferrer" href="https://spdx.org/licenses/MIT.html">MIT</a>'
      })|raw }}
    </p>
    <p class="card-text">
      {{ 'The photographs are the property of their respective authors and are published under the terms of their respective licenses.'|trans }}
    </p>
    <p class="card-text">
      {{ 'The website logo is designed by %link%.'|trans({
        '%link%': '<a rel="noopener noreferrer" href="https://www.freepik.com">macrovector / Freepik</a>'
      })|raw }}
    </p>
    <h3>{{ 'Limited liability'|trans }}</h3>
    <p class="card-text">
      {{ 'The site editor cannot be held responsible for the incompleteness or inaccuracy of the data, or damage to property or persons that may result from their use.'|trans }}
    </p>
    <h3>{{ 'Warning'|trans }}</h3>
    <p class="card-text text-danger">
      <strong>{{ 'Data from this site must not under no circumstances be used for flight planning and/or navigation onboard an aircraft.'|trans }}</strong>
    </p>
  </div>
{% endblock %}
