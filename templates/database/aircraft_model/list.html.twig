{% extends '_layouts/database.html.twig' %}

{% block title %}{{ 'Aircraft models'|trans }} - {{ parent() }}{% endblock %}
{% block description %}{{ 'Technical data on aircraft models: Dimensions, weight, range, performance,â€¦'|trans }}{% endblock %}

{% block side_content %}
  {% include '_partials/filters/aircraft_models.html.twig' %}
{% endblock %}

{% block main_content %}
  <div class="card card-body">
    <h1 class="card-title">{{ 'Aircraft models'|trans }}</h1>
    <p class="card-text text-muted">
      {{ '{0}No items|{1}1 item|]1,Inf[%nbResults% items'|trans({
        '%count%': aircraftModels.nbResults,
        '%nbResults%': aircraftModels.nbResults|format_number
      })|raw }}
      -
      {{ 'Page %currentPage% out of %nbPages%'|trans({
        '%currentPage%': aircraftModels.currentPage|format_number,
        '%nbPages%': aircraftModels.nbPages|format_number
      })|raw }}
    </p>
  </div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-4 g-3">

    {% for aircraftModel in aircraftModels %}
      <div class="col">
        <div class="card">
          <a href="{{ path('database_aircraft_model_read', { slug: aircraftModel.slug }) }}">
            <div class="card-img-top h-250px overflow-hidden position-relative">

              {% if aircraftModel.pictures|length %}
                <img class="img-cover"
                     src="{{ asset('pictures/' ~ aircraftModel.pictures.first)|imagine_filter('thumbnail_600x300') }}"
                     width="600" height="300" alt="">
              {% else %}
                <img class="img-cover" src="{{ asset('assets/images/no-picture.png') }}" alt="">
              {% endif %}

              {% include '_partials/tags.html.twig' with { tags: aircraftModel.tags } %}

            </div>
          </a>
          <div class="card-body">
            <h3 class="card-title">
              <a href="{{ path('database_aircraft_model_read', { slug: aircraftModel.slug }) }}">
                {{ aircraftModel.name }}
              </a>
            </h3>

            {% if aircraftModel.manufacturer is not null %}
              <p class="card-text">
                {{ aircraftModel.manufacturer.name }}
              </p>
            {% endif %}

          </div>
        </div>
      </div>
    {% endfor %}

  </div>

  {% if aircraftModels.haveToPaginate %}
    <div class="d-flex justify-content-center">
      {{ pagerfanta(aircraftModels) }}
    </div>
  {% endif %}

{% endblock %}
