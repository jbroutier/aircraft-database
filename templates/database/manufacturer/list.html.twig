{% extends '_layouts/database.html.twig' %}

{% block title %}{{ 'Manufacturers'|trans }} - {{ parent() }}{% endblock %}
{% block description %}{{ 'Data on aircraft and engines manufacturers: Engines, aircraft models,â€¦'|trans }}{% endblock %}

{% block side_content %}
  {% include '_partials/filters/manufacturers.html.twig' %}
{% endblock %}

{% block main_content %}
  <div class="card card-body">
    <h1>{{ 'Manufacturers'|trans }}</h1>
    <p class="card-text text-muted">
      {{ '{0}No items|{1}1 item|]1,Inf[%nbResults% items'|trans({
        '%count%': manufacturers.nbResults,
        '%nbResults%': manufacturers.nbResults|format_number
      })|raw }}
      -
      {{ 'Page %currentPage% out of %nbPages%'|trans({
        '%currentPage%': manufacturers.currentPage|format_number,
        '%nbPages%': manufacturers.nbPages|format_number
      })|raw }}
    </p>
  </div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3 row-cols-xxl-4 g-3">

    {% for manufacturer in manufacturers %}
      <div class="col">
        <div class="card">
          <a href="{{ path('database_manufacturer_read', { slug: manufacturer.slug }) }}">
            <div class="card-img-top position-relative">

              {% if manufacturer.pictures|length %}
                <img class="img-fluid"
                     src="{{ asset('pictures/' ~ manufacturer.pictures|first)|imagine_filter('thumbnail_560x320') }}"
                     width="560" height="320" alt="{{ manufacturer.pictures|first.description|escape('html_attr') }}">
              {% else %}
                <img class="img-fluid" src="{{ asset('assets/images/no-picture-560x320.webp') }}"
                     width="560" height="320" alt="">
              {% endif %}

              {% include '_partials/tags.html.twig' with { tags: manufacturer.tags } %}

            </div>
          </a>
          <div class="card-body">
            <div class="d-flex justify-content-between gap-3">
              <div>
                <a href="{{ path('database_manufacturer_read', { slug: manufacturer.slug }) }}">
                  <h4>{{ manufacturer.name }}</h4>
                </a>
                <p class="card-text">

                  {% if manufacturer.country is not null %}
                    <span class="fp {{ manufacturer.country|lower }} me-2"></span>
                    {{ manufacturer.country|country_name }}
                  {% else %}
                    <span class="fp intl me-2"></span>
                    {{ 'International'|trans }}
                  {% endif %}

                </p>
              </div>

              {% if manufacturer.logo is not null %}
                <div class="logo-container">
                  <img src="{{ asset('logos/' ~ manufacturer.logo) }}" alt="">
                </div>
              {% endif %}

            </div>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>

  {% if manufacturers.haveToPaginate %}
    <div class="d-flex justify-content-center">
      {{ pagerfanta(manufacturers) }}
    </div>
  {% endif %}

{% endblock %}
