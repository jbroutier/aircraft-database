{% extends '_layouts/default.html.twig' %}

{% block title %}{{ manufacturer.name }} - {{ parent() }}{% endblock %}
{% block description %}{{ 'Data on %manufacturer%: Engines, aircraft models,â€¦'|trans({
  '%manufacturer%': manufacturer.name
}) }}{% endblock %}

{% block images %}
  {% for picture in manufacturer.pictures %}
    <meta property="og:image"
          content="{{ absolute_url(asset('pictures/' ~ picture)|imagine_filter('thumbnail_1200x1200')) }}">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="1200">
  {% endfor %}
{% endblock %}

{% block content %}
  <div class="card position-relative">

    {% if manufacturer.pictures|length %}
      {% include '_partials/carousel.html.twig' with { pictures: manufacturer.pictures } %}
    {% else %}
      <img class="img-fluid" src="{{ asset('assets/images/no-picture-1400x800.webp') }}"
           width="1400" height="800" alt="">
    {% endif %}

    {% include '_partials/tags.html.twig' with { tags: manufacturer.tags } %}

  </div>
  <div class="card card-body">
    <h1 class="card-title">{{ manufacturer.name }}</h1>
    <p class="card-text">
      <span class="fp {{ manufacturer.country|lower }} me-2"></span>
      {{ manufacturer.country|country_name }}
    </p>
  </div>
  <div class="d-flex flex-column gap-3">

    {% include '_partials/properties.html.twig' with {
      propertyGroups: manufacturer.propertyGroups,
      propertyValues: manufacturer.propertyValues
    } %}
    {% include '_partials/database/aircraft_types.html.twig' %}
    {% include '_partials/database/aircraft_models.html.twig' %}
    {% include '_partials/database/engine_models.html.twig' %}

  </div>
{% endblock %}
